<div class="tm_page-header">
  <h1>Inbox Cleaner</h1>
</div>

<span style="font-weight: 700">You have <%= num_important_emails %> high priority emails!</span>
<br /><br />

<% if (important_emails.length > 0) { %>
  <table class="tm_datagrid">
    <thead>
      <tr>
        <th></th>
        <th>From</th>
        <th>Subject</th>
        <th>Date</th>
      </tr>
    <thead>
    <tbody>
    <% for(var i = 0; i < important_emails.length; i++) { %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= important_emails[i].from_name %></td>
        <td><%= important_emails[i].subject %></td>
        <td><%= new TDate().initializeWithISO8601(important_emails[i].date).longFormDateString() %></td>
      </tr>
    <% } %>
    </tbody>
  </table>
<% } %>

<span style="font-weight: 700"><%= num_auto_filed_emails %> emails can be auto filed!</span>
<br /><br />
<% if (auto_filed_emails.length > 0) { %>
  <button type="button" class="btn btn-block btn-primary auto-file-button">Auto File Emails!</button>
  <br />

  <table class="tm_datagrid">
    <thead>
      <tr>
        <th></th>
        <th>From</th>
        <th>Subject</th>
        <th>Date</th>
        <th>Auto File Folder</th>
      </tr>
    <thead>
    <tbody>
    <% for(var i = 0; i < auto_filed_emails.length; i++) { %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= auto_filed_emails[i].from_name %></td>
        <td><%= auto_filed_emails[i].subject %></td>
        <td><%= new TDate().initializeWithISO8601(auto_filed_emails[i].date).longFormDateString() %></td>
        <td><%= auto_filed_emails[i].auto_file_folder_name %></td>
      </tr>
    <% } %>
    </tbody>
  </table>
<% } %>
